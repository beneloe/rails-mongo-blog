<p id="notice"><%= notice %></p>
<div class="mt-5">
    <%= @articles.each do |article| %>
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title"><%= link_to article.title.chop(), article_path(article), class: "text-body text-decoration-none" %></h5>
                <h6 class="card-subtitle mb-2 p-1 text-muted category"><%= article.category.category_name %></h6>
                <p class="card-text"><small class="text-muted">Created by <%= article.user.name %> on <%= article.created_at.to_s().chop().chop().chop() %></small></p>
                <p class="card-text"><%= link_to article.text, article_path(article), class: "text-body text-decoration-none" %></p>
            </div>
        </div>
    <% end %>
</div>
